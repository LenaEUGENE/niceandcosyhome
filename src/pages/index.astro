---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { Image } from "astro:assets";
import heroImage from "@images/heroImage.jpg";
import PrimaryCTA from "../components/ui/PrimaryCTA.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

//import collections
import { getCollection } from "astro:content";
const products = await getCollection("products");
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col min-h-screen">
		<Header />
		<main class="w-full flex-grow">
			<!-- Hero -->
			<section class="section mx-auto py-[6%]">
				<div class="container w-[95%] max-w-[84rem] mx-auto">
					<!-- Grid -->
					<div
						class="grid md:grid-cols-2 gap-4 md:gap-8 xl:gap-20 md:items-center"
					>
						<div>
							<h1
								class="block text-3xl font-bold text-gray-800 sm:text-4xl lg:text-6xl lg:leading-tight"
							>
								Essential home collection for a
								<span class="text-yellow-500">
									retro-modern
								</span> lifestyle
							</h1>
							<p class="mt-3 text-lg text-gray-800">
								intersection of timeless d√©cor, stylish
								furniture infused with cutting-edge technology.
							</p>

							<!-- Buttons -->
							<div
								class="mt-7 grid gap-3 md:gap-6 w-full items-center sm:inline-flex"
							>
								<a
									class="group inline-flex items-center justify-center gap-x-2 rounded-lg px-4 py-3 text-sm font-semibold text-neutral-50 ring-orange-500 transition duration-300 focus-visible:ring outline-none
									bg-orange-500 hover:bg-orange-500/90 hover:text-orange-50 active:bg-orange-500"
									href="#"
								>
									Visit our Amazon Store Page
									<svg
										class="flex-shrink-0 size-4"
										xmlns="http://www.w3.org/2000/svg"
										width="24"
										height="24"
										viewBox="0 0 24 24"
										fill="none"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
										><path d="m9 18 6-6-6-6"></path></svg
									>
								</a>

								<span class="text-sm font-semibold"
									>Or keep scrolling
								</span>
							</div>
							<!-- End Buttons -->
						</div>
						<!-- End Col -->

						<div class="relative ms-4">
							<Image
								src={heroImage}
								alt="retro-modern living room"
								class="h-full w-full scale-110 object-cover object-center"
								draggable={"false"}
								loading={"eager"}
								format={"webp"}
							/>
						</div>
						<!-- End Col -->
					</div>
					<!-- End Grid -->
				</div>
			</section>
			<!-- End Hero -->

			<!-- Most Wanted -->
			<section class="section mx-auto py-[6%]">
				<!-- Block for title and subtitle -->
				<div
					class="container w-[95%] max-w-[84rem] mx-auto space-y-8 lg:space-y-12"
				>
					<div class="grid md:grid-cols-2 items-start">
						<!-- Rendering title -->
						<h2
							class="text-balance text-2xl font-bold text-neutral-800 md:text-3xl lg:text-4xl"
						>
							Our Most wanted Finds
						</h2>
						<!-- Rendering subtitle -->

						<p class="text-lg text-pretty text-neutral-800">
							Here, find the most searched after items, on Nice
							and Cosy home website and Instagram feed, in the
							last 30 days.
						</p>
					</div>
					<div
						class="grid md:grid-cols-2 gap-6 lg:grid-cols-3 lg:gap-8 md:items-center"
					>
						<!-- Block to display the card-product components -->
						<div
							class="col-span-3 grid gap-8 lg:grid-cols-2 lg:gap-8"
						>
							<!-- Injecting Most wanted components with different properties -->

							{
								products.map((products) => (
									<div class="flex flex-col rounded-xl border bg-white shadow-sm">
										<img
											class="h-auto max-h-64 w-full rounded-t-xl object-cover object-bottom"
											src={products.data.imgCard}
											alt={products.data.imgAlt}
										/>
										<div class="p-4 md:p-5">
											<h3 class="text-lg font-semibold text-gray-800">
												{products.data.title}
											</h3>
											<p class="mt-1 mb-6 text-gray-700">
												{products.data.description}
											</p>
											<a
												class="group inline-flex items-center justify-center gap-x-2 rounded-lg px-4 py-3 text-sm font-semibold text-neutral-50 ring-orange-500 transition duration-300 focus-visible:ring outline-none
									bg-orange-500 hover:bg-orange-500/90 hover:text-orange-50 active:bg-orange-500"
												href="#"
											>
												Buy On Amazon
												<svg
													class="flex-shrink-0 size-4"
													xmlns="http://www.w3.org/2000/svg"
													width="24"
													height="24"
													viewBox="0 0 24 24"
													fill="none"
													stroke="currentColor"
													stroke-width="2"
													stroke-linecap="round"
													stroke-linejoin="round"
												>
													<path d="m9 18 6-6-6-6" />
												</svg>
											</a>
										</div>
									</div>
								))
							}
						</div>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
